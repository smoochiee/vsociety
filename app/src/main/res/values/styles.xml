<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Default application theme. -->
    <style name="BlueAndAmber" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/grey_500</item>
    </style>

    <!-- Default application theme without translucent status -->
    <style name="BlueAndAmberNoTranslucent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/amber_500</item>
    </style>

    <!-- Setting theme. -->
    <style name="SettingTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorPrimaryDark">@color/grey_600</item>
        <item name="colorAccent">@color/teal_500</item>
        <item name="android:colorBackground">@color/grey_50</item>
    </style>


    <style name="FABStyle">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="elevation">@dimen/elevation_small</item>
        <item name="pressedTranslationZ">@dimen/elevation_xlarge</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginStart">@dimen/card_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_margin</item>
        <item name="elevation">@dimen/elevation_xxsmall</item>
        <item name="pressedTranslationZ">@dimen/elevation_medium</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

    </style>




</resources>
